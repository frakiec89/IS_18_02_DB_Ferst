<Window x:Class="ProectSGK.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProectSGK"
        mc:Ignorable="d"
        Title="Меню" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button x:Name="btAddGroup" Click="btAddGroup_Click" 
                    
                    Margin="10" Padding="10"
                    >Добавить группу</Button>

            <Button x:Name="btDellGroup" Click="btDellGroup_Click"  
                    Margin="10" Padding="10"
                    >Удалить группу</Button>




            <Button x:Name="btAddStudent" Click="btAddStudent_Click"
                    Margin="10" Padding="10"
                    >Добавить  студента</Button>


        </StackPanel>
    </Grid>
</Window>
