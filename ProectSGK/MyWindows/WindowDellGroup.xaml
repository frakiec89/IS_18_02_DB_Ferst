<Window x:Class="ProectSGK.MyWindows.WindowDellGroup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProectSGK.MyWindows"
        mc:Ignorable="d"
        Title="Удалить группу" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label>Введите  ид группы :</Label>
            <TextBox x:Name="tbIdGroup" Margin="10" ></TextBox>
            <Button x:Name="btDellGroup" Margin="10" Padding="10" Click="btDellGroup_Click" >Удалить группу</Button>

        </StackPanel>
    </Grid>
</Window>
