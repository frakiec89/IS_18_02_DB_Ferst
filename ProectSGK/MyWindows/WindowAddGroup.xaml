<Window x:Class="ProectSGK.MyWindows.WindowAddGroup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProectSGK.MyWindows"
        mc:Ignorable="d"
        Title="Добавить новую  группу" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label>Введите  название новой  группы:</Label>
            <TextBox x:Name="tbName" Margin="10" ></TextBox>
            <Button x:Name="btAddGroup" Margin="10" Padding="10"  Click="btAddGroup_Click" >Добавить новую группу</Button>
            
         
        </StackPanel>
    </Grid>
</Window>
